<div class="random">

    {{#each randombeer}}

    <div>
        <img class="beersImg" src="{{image_url}}" alt="{{name}}">
    </div>
    <article>
        <h3>{{name}}</h3>
        <p class="tag">{{tagline}}</p>
        <p>{{description}}</p>
        <h4>Food Pairing</h4>
        {{#each food_pairing}}
        <li>{{this}}</li>
        {{/each}}
        <h4>Brewer tips:</h4> {{brewers_tips}}

    </article>

    {{/each}}

</div>